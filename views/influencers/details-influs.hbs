<div class="container coasters-index">

    <div class="row justify-content-center align-items-center">
        <div class="col-4">
            <img src="{{image}}">
        </div>
        <div class="col-md-6">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            <p><strong>Instagram: <a class="text-dark" href="{{instagram}}">{{name}}</a></strong> | <strong>Followers:
                </strong> {{followers}}</p>



            <hr>

            <a href="/influencer" class="btn text-white">Volver</a>
            {{#if isAdmin}} 
            <a href="/influencer/eliminar-influencer?id={{id}}" class="btn text-white">Eliminar</a>
            <a href="/influencer/editar-influencer?id={{id}}" class="btn text-white btn-sm">Editar</a>
            {{/if}} 

        </div>
    </div>

</div>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Editar</h2>

            <form method="POST" action="/influencer/editar-influencer?id={{influ._id}}">

                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="name" value="{{influ.name}}">
                </div>
                <div class="form-group">
                    <label>Instagram</label>
                    <input type="text" class="form-control" name="instagram" value="{{influ.instagram}}">
                </div>
                <div class="form-group">
                    <label>Followers</label>
                    <input type="text" class="form-control" name="followers" value="{{influ.followers}}">
                </div>
                <div class="form-group">
                    <label>Descripci√≥n</label>
                    <input type="text" class="form-control" name="description" value="{{influ.description}}">
                </div>

                <div class="form-group">
                    <label for="agency-list">Agencia actual</label>
                    <select name="agency" class="form-control" id="agency-list">
                        <option>Seleccionar</option>
                        {{#each agencies}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-dark btn-block">Editar</button>
            </form>
        </div>
    </div>

</div>
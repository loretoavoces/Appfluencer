<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Registro de usuaria</h1>
            <form method="POST" action="/registro">
                <div class='form-group'>
                    <label for='username'>Nombre de usuaria</label>
                    <input name='username' type='text' class='form-control' placeholder='nombre de usuaria'
                        id='username'>
                </div>
                <div class='form-group'>
                    <label for='password'>Contrase√±a</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'>
                </div>
                <button type='submit' class='btn btn-dark btn-block'>Registrarme</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>
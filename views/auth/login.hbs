<div class="container form-login">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Iniciar sesión</h1>
            <form method="POST" action="/inicio-sesion">
                <div class='form-group'>
                    <label for='username'>Nombre de usuaria</label>
                    <input name='username' type='text' class='form-control' placeholder='nombre de usuaria'
                        id='username'>
                </div>
                <div class='form-group'>
                    <label for='password'>Contraseña</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'>
                </div>
                <button type='submit' class='btn btn-dark btn-block'>Iniciar sesión</button>
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: #ed564b; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>
        </div>
    </div>
</div>


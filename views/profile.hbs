<div class="container">
    <h1>¡Bienvenida a tu perfil {{user.username}}!</h1>
    <hr>

    <div class="row">
        {{#each favInflu}}
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                {{!-- <a href="/influencer/{{id}}"> --}}
                <img class="card-img-top img-card" src="{{favInflu.[3]}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{favInflu.[2]}}</h5>
                    <p class="card-text"></p>
                    {{#if ../isAdmin}}
                    <a href="/influencer/editar-influencer?id={{id}}" class="btn text-white btn-sm">Editar</a>
                    <a href="/influencer/eliminar-influencer?id={{id}}" class="btn text-white btn-sm">Eliminar</a>

                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <a href="/cerrar-sesion" class="btn btn-dark">Cerrar sesión</a>
    {{#if isAdmin}}
    <a href="/" class="btn btn-danger">Eliminar perfil (solo admin!)</a>
    {{/if}}
</div>
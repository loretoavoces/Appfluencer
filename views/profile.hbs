<div class="container">
    <h1>¡Bienvenida a tu perfil {{user.username}}!</h1>
    <hr>

    <div class="row justify-content-center align-items-center">
        {{#each user.favourites}}
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top img-card" src="{{image}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text"></p>
                    {{#if ../isAdmin}}
                    <a href="/influencer/editar-influencer?id={{id}}" class="btn text-white btn-sm">Editar</a>
                    <a href="/influencer/favorita/borrar/{{id}}" class="btn text-white btn-sm">Eliminar</a>

                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <a href="/cerrar-sesion" class="btn btn-dark">Cerrar sesión</a>
    {{#if isAdmin}}
    <a href="/" class="btn btn-danger">Eliminar perfil (solo admin!)</a>
    {{/if}}
</div>